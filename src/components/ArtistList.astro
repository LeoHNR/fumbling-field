---
import { artists } from "../data/artists.ts";
---

<div class="bg-gray-100 p-10">
    <h2 class="text-3xl font-semibold mb-6">Artistas Destacados</h2>
    <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
    >
        {
            artists.map((artist) => (
                <div class="bg-white p-4 rounded shadow hover:shadow-lg transition">
                    <img
                        src={artist.image}
                        alt={artist.name}
                        class="w-full h-40 object-cover rounded mb-4"
                    />
                    <h3 class="text-xl font-semibold">{artist.name}</h3>
                    <p class="text-gray-600">{artist.genre}</p>
                    <p class="text-gray-600">{artist.popularity}</p>
                    <a
                        href={`/artist/${artist.slug}`}
                        class="text-blue-500 hover:underline mt-2 inline-block"
                    >
                        Ver Perfil
                    </a>
                </div>
            ))
        }
    </div>
</div>

<style>
    .bg-gray-100 {
        background-color: transparent;
    }
    .bg-white {
        background-color: #1f1f1f;
    }
</style>
